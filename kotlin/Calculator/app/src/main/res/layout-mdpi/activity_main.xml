<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textBackColor"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/eTInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/textBackColor"
        android:ems="10"
        android:hint="0"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="26sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="AllClearClick"
                android:text="AC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="+/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="percentClick"
                android:text="%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="arithOperation"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/number7"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number8"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number9"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="arithOperation"
                android:text="X"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/number4"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number5"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number6"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="arithOperation"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/number1"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number2"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number3"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:onClick="NumberClickEvent"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btnAdd"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="arithOperation"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number0"
            android:layout_width="80pt"
            android:layout_height="25pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:onClick="NumberClickEvent"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numberDot"
            android:layout_width="40pt"
            android:layout_height="25pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:onClick="NumberClickEvent"
            android:text="."
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="40pt"
            android:layout_height="25pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="equalClick"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>